{
  "manifest_version": 3,
  "name": "Smart Table Extractor with AI Query & Charts",
  "version": "2.1",
  "description": "Extract tables, query with natural language, and visualize with AI-powered charts.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Open Smart Table Extractor"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "web_accessible_resources": [{
    "resources": ["lib/sql-wasm.wasm"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/sql-wasm.js",
        "lib/chart.umd.js",
        "src/content/ai-metadata.js",
        "src/content/sql-query.js",
        "src/content/chart-generator.js",
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
